<!--pages/scenario2/index.wxml-->
<view>
<canvas 
    type="webgl" 
    id="webgl" 
    canvas-id="webgl" 
    style="position:fixed;top:0;width:{{canvasWidth}}px;height:{{canvasHeight}}px;">
  </canvas>
  <!--摄像头层-->
  <camera 
    mode="normal" 
    device-position="back" 
    flash="auto" 
    frame-size="medium"
    style="position:fixed;top:-100%;width:100%;height:100%;">
  </camera>
</view>
